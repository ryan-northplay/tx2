    "turbo": {
      "name": "turbo",
      "command": "pnpm turbo",
      "runAtStart": false
    },
    "build": {
      "name": "build",
      "command": "pnpm build",
      "runAtStart": false
    },
    "start": {
      "name": "start",
      "command": "pnpm start",
      "runAtStart": false
    },
    "lint": {
      "name": "lint",
      "command": "pnpm lint",
      "runAtStart": false
    },
    "preview": {
      "name": "preview",
      "command": "pnpm preview",
      "runAtStart": false
    },
    "postinstall": {
      "name": "postinstall",
      "command": "pnpm postinstall",
      "runAtStart": false
    },
    "npx prisma": {
